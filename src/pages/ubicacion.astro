---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import TopNav from "../components/TopNav.astro";
import BottomNav from "../components/BottomNav.astro";
---

<Layout title='Club Social Roberts - Ubicación'>
  <div class='menu-container'>
    <Header subtitle='Cómo Llegar' />
    <TopNav activePage='ubicacion' />

    <!-- Main Content -->
    <main class='location-content'>
      <!-- Map Container -->
      <div class='map-container'>
        <iframe
          src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d815.6430805465188!2d-61.970706330409485!3d-35.142344798297884!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95c72c02ce811393%3A0xd31e3df3a257e69e!2sClub%20Social%20Roberts!5e0!3m2!1ses!2sar!4v1768422860545!5m2!1ses!2sar'
          width='100%'
          height='400'
          style='border:0;'
          allowfullscreen=''
          loading='lazy'
          referrerpolicy='no-referrer-when-downgrade'
          title='Mapa de ubicación del Club Social Roberts'></iframe>
      </div>

      <!-- Location Info -->
      <div class='location-info'>
        <section class='info-section'>
          <h2 class='section-title'>Nuestra Ubicación</h2>

          <div class='info-card'>
            <div class='info-icon'>
              <svg
                xmlns='http://www.w3.org/2000/svg'
                width='24'
                height='24'
                viewBox='0 0 24 24'
                fill='none'
                stroke='currentColor'
                stroke-width='2'
                stroke-linecap='round'
                stroke-linejoin='round'
              >
                <path d='M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z'></path>
                <circle cx='12' cy='10' r='3'></circle>
              </svg>
            </div>
            <div class='info-content'>
              <h3>Dirección</h3>
              <p>Belgrano 235, Roberts, Provincia de Buenos Aires</p>
              <p>Argentina</p>
            </div>
          </div>

          <div class='info-card'>
            <div class='info-icon'>
              <svg
                xmlns='http://www.w3.org/2000/svg'
                width='24'
                height='24'
                viewBox='0 0 24 24'
                fill='none'
                stroke='currentColor'
                stroke-width='2'
                stroke-linecap='round'
                stroke-linejoin='round'
              >
                <circle cx='12' cy='12' r='10'></circle>
                <polyline points='12 6 12 12 16 14'></polyline>
              </svg>
            </div>
            <div class='info-content'>
              <h3>Horarios</h3>
              <p>Lunes a Lunes · Mañana (solo cafetería): 11:30 - 15:00</p>
              <p>
                Lunes a Lunes · Noche: cafetería y bar desde las 20:00 hasta el
                cierre. Cocina: 21:00 - 00:00
              </p>
            </div>
          </div>

          <div class='info-card'>
            <div class='info-icon'>
              <svg
                xmlns='http://www.w3.org/2000/svg'
                width='24'
                height='24'
                viewBox='0 0 24 24'
                fill='none'
                stroke='currentColor'
                stroke-width='2'
                stroke-linecap='round'
                stroke-linejoin='round'
              >
                <path
                  d='M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z'
                ></path>
              </svg>
            </div>
            <div class='info-content'>
              <h3>Reservas</h3>
              <p>Teléfono: (2355) 579179</p>
            </div>
          </div>

          <a
            href='https://www.google.com/maps/dir/?api=1&destination=Club+Social+Roberts,Roberts,Buenos+Aires'
            target='_blank'
            rel='noopener noreferrer'
            class='directions-btn'
          >
            <svg
              xmlns='http://www.w3.org/2000/svg'
              width='20'
              height='20'
              viewBox='0 0 24 24'
              fill='none'
              stroke='currentColor'
              stroke-width='2'
              stroke-linecap='round'
              stroke-linejoin='round'
            >
              <polygon points='3 11 22 2 13 21 11 13 3 11'></polygon>
            </svg>
            Cómo llegar desde mi ubicación
          </a>
        </section>

        <!-- Footer Note -->
        <div class='menu-footer-note'>
          <p class='footer-brand'>CLUB SOCIAL ROBERTS — SALÓN DE HONOR</p>
        </div>
      </div>
    </main>

    <BottomNav activePage='ubicacion' />
  </div>

  <style>
    .location-content {
      background-color: var(--color-bg);
    }

    .map-container {
      width: 100%;
      height: 400px;
      overflow: hidden;
      border-bottom: 1px solid var(--color-border);
    }

    .map-container iframe {
      width: 100%;
      height: 100%;
      display: block;
    }

    .location-info {
      padding: 0 1.5rem;
    }

    .info-section {
      padding: 2.5rem 0;
    }

    .info-card {
      display: flex;
      gap: 1.25rem;
      padding: 1.5rem;
      background-color: var(--color-white);
      border-radius: 12px;
      margin-bottom: 1rem;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
      border: 1px solid var(--color-border);
    }

    .info-icon {
      flex-shrink: 0;
      width: 48px;
      height: 48px;
      display: flex;
      align-items: center;
      justify-content: center;
      background-color: rgba(200, 164, 92, 0.1);
      border-radius: 50%;
      color: var(--color-accent);
    }

    .info-content {
      flex: 1;
    }

    .info-content h3 {
      font-family: "Montserrat", sans-serif;
      font-size: 1rem;
      font-weight: 600;
      color: var(--color-text);
      margin-bottom: 0.5rem;
    }

    .info-content p {
      font-size: 0.9rem;
      color: #666;
      line-height: 1.6;
      margin: 0.25rem 0;
    }

    .directions-btn {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.75rem;
      width: 100%;
      padding: 1rem 1.5rem;
      margin-top: 2rem;
      background-color: var(--color-accent);
      color: var(--color-white);
      border: none;
      border-radius: 8px;
      font-family: "Montserrat", sans-serif;
      font-size: 0.95rem;
      font-weight: 500;
      text-decoration: none;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 0 4px 12px rgba(200, 164, 92, 0.3);
    }

    .directions-btn:hover {
      background-color: #b89350;
      transform: translateY(-2px);
      box-shadow: 0 6px 16px rgba(200, 164, 92, 0.4);
    }

    .directions-btn:active {
      transform: translateY(0);
    }

    @media (max-width: 380px) {
      .info-card {
        padding: 1.25rem;
        gap: 1rem;
      }

      .info-icon {
        width: 40px;
        height: 40px;
      }

      .info-icon svg {
        width: 20px;
        height: 20px;
      }

      .info-content h3 {
        font-size: 0.95rem;
      }

      .info-content p {
        font-size: 0.85rem;
      }

      .directions-btn {
        font-size: 0.9rem;
        padding: 0.9rem 1.25rem;
      }
    }
  </style>
</Layout>
